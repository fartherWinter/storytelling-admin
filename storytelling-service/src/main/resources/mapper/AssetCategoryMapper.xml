<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chennian.storytelling.dao.asset.AssetCategoryMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.chennian.storytelling.bean.model.asset.AssetCategory">
        <id column="id" property="id" />
        <result column="category_code" property="categoryCode" />
        <result column="category_name" property="categoryName" />
        <result column="parent_id" property="parentId" />
        <result column="parent_name" property="parentName" />
        <result column="description" property="description" />
        <result column="order_num" property="orderNum" />
        <result column="status" property="status" />
        <result column="level" property="level" />
        <result column="path" property="path" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="create_by" property="createBy" />
        <result column="update_by" property="updateBy" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, category_code, category_name, parent_id, parent_name, description, 
        order_num, status, level, path, create_time, update_time, create_by, update_by
    </sql>

    <!-- 根据类别编码查询类别 -->
    <select id="selectByCategoryCode" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM asset_category
        WHERE category_code = #{categoryCode}
        AND status = 1
    </select>

    <!-- 根据上级类别ID查询子类别列表 -->
    <select id="selectByParentId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM asset_category
        WHERE parent_id = #{parentId}
        AND status = 1
        ORDER BY order_num ASC, create_time ASC
    </select>

    <!-- 查询所有根类别 -->
    <select id="selectRootCategories" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM asset_category
        WHERE parent_id IS NULL OR parent_id = 0
        AND status = 1
        ORDER BY order_num ASC, create_time ASC
    </select>

    <!-- 查询类别树形结构 -->
    <select id="selectCategoryTree" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM asset_category
        WHERE status = 1
        ORDER BY level ASC, order_num ASC, create_time ASC
    </select>

    <!-- 根据状态查询类别列表 -->
    <select id="selectByStatus" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM asset_category
        WHERE status = #{status}
        ORDER BY level ASC, order_num ASC, create_time ASC
    </select>

</mapper>