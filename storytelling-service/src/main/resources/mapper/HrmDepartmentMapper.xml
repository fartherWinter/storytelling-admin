<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chennian.storytelling.dao.hrm.HrmDepartmentMapper">

    <resultMap type="com.chennian.storytelling.bean.model.hrm.HrmDepartment" id="BaseResultMap">
        <id property="id" column="id" />
        <result property="deptCode" column="dept_code" />
        <result property="deptName" column="dept_name" />
        <result property="parentId" column="parent_id" />
        <result property="parentName" column="parent_name" />
        <result property="managerId" column="manager_id" />
        <result property="managerName" column="manager_name" />
        <result property="phone" column="phone" />
        <result property="email" column="email" />
        <result property="address" column="address" />
        <result property="orderNum" column="order_num" />
        <result property="status" column="status" />
        <result property="level" column="level" />
        <result property="path" column="path" />
        <result property="createTime" column="create_time" />
        <result property="updateTime" column="update_time" />
        <result property="createBy" column="create_by" />
        <result property="updateBy" column="update_by" />
        <result property="remark" column="remark" />
    </resultMap>

    <sql id="Base_Column_List">
        id, dept_code, dept_name, parent_id, parent_name, manager_id, manager_name,
        phone, email, address, order_num, status, level, path,
        create_time, update_time, create_by, update_by, remark
    </sql>

    <!-- 根据上级部门ID查询子部门列表 -->
    <select id="selectByParentId" parameterType="long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM hrm_department
        WHERE parent_id = #{parentId}
        AND status = 1
        ORDER BY order_num, dept_name
    </select>

    <!-- 根据部门编码查询部门信息 -->
    <select id="selectByDeptCode" parameterType="string" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM hrm_department
        WHERE dept_code = #{deptCode}
        AND status = 1
    </select>

    <!-- 查询所有根部门（顶级部门） -->
    <select id="selectRootDepartments" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM hrm_department
        WHERE parent_id IS NULL OR parent_id = 0
        AND status = 1
        ORDER BY order_num, dept_name
    </select>

    <!-- 根据部门负责人ID查询部门列表 -->
    <select id="selectByManagerId" parameterType="long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM hrm_department
        WHERE manager_id = #{managerId}
        AND status = 1
        ORDER BY order_num, dept_name
    </select>

    <!-- 查询部门树形结构 -->
    <select id="selectDepartmentTree" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM hrm_department
        WHERE status = 1
        ORDER BY level, order_num, dept_name
    </select>

    <!-- 根据状态查询部门列表 -->
    <select id="selectByStatus" parameterType="integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM hrm_department
        WHERE status = #{status}
        ORDER BY level, order_num, dept_name
    </select>

</mapper>